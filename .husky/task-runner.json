{
  "$schema": "https://alirezanet.github.io/Husky.Net/schema.json",
  "tasks": [
    {
      "name": "set-client-path-for-prettier",
      "command": "cmd",
      "args": ["cd", "client"]
    },
    {
      "name": "run-prettier",
      "command": "npx",
      "args": ["prettier", "--ignore-unknown", "--write", "${staged}"],
      "pathMode": "absolute"
    }
  ]
}
